@model List<Slide>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Car Categories</h4>

                    <a asp-controller="Slide" asp-action="create" class="btn btn-success">Create Slide</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Order Number
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>Slide Title
                                    </th>
                                    <th>
                                        Slide SubTitle
                                    </th>
                                    <th>
                                        Setting
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slide item in Model)
                                {
                                   

                                    <tr>
                                        <td class="py-1">
                                           @item.Order
                                        </td>
                                        <td>
                                            <img src="~/assets/images/website-images//@item.Image"
                                                 alt="slide" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.SubTitle
                                        </td>
                                        <td>
                                            <a asp-controller="Slide" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                            <a asp-controller="Slide" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                            <a class="btn btn-primary">Info</a>
                                        </td>
                                    </tr>



                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

