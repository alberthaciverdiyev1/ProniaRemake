@model Client
<div class="content-wrapper">
    <div class="row">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create New Client</h4>

                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputName1">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                   
                        <div class="form-group">
                            <label for="exampleInputName1">Surname</label>
                            <input asp-for="Surname" class="form-control" placeholder="Surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProfessionId">Profession</label>
                           

                            <select asp-for="ProfessionId" asp-items="new SelectList(ViewBag.Professions,nameof(Profession.Id),nameof(Profession.Name))">
                                <option selected disabled>Select Profession</option>
                            </select>

                            <span asp-validation-for="ProfessionId" class="text-danger"></span>

                        </div>
                        <button type="submit" class="btn btn-success me-2">Create Client</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>